<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="upogarden_especialidad_form">
			<field name="name">Especialidades</field>
			<field name="model">upogarden.especialidad</field>
			<field name="arch" type="xml">
				<form string="Formulario de especialidades">
					<group string="Especialidades">
						<field name="id_especialidad" /><!--- AL CREAR SE VE ESTO -->
						<field name="descripcion" />
					</group>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="upogarden_especialidad_tree">
			<field name="name">Especialidades</field>
			<field name="model">upogarden.especialidad</field>
			<field name="arch" type="xml">
				<tree string="Tree de especialidades">
					<field name="id_especialidad" /><!--- EN LA LISTA SE VE ESTO -->
					<field name="descripcion" />
					
				</tree>
			</field>
		</record>

<!--- METER POR LUGAR -->
		<record id="act_especialidad" model="ir.actions.act_window">
			<field name="name">Especialidades</field>
			<field name="res_model">upogarden.especialidad</field>
			<field name="view_mode">tree,form</field>
		</record>
		<menuitem name="Especialidades" id="especialidad_submenu"
			parent="upogarden" sequence="100" />
		<menuitem name="Ver Especialidades" id="especialidad_submenu_2"
			parent="especialidad_submenu" sequence="100" action="act_especialidad" />

	</data>
</odoo>